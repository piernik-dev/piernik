 $BASE_DOMAIN
    n_d = 256, 48, 16
    nb  = 4
    bnd_xl = 'ref'
    bnd_xr = 'out'
    bnd_yl = 'per'
    bnd_yr = 'per'
    bnd_zl = 'per'
    bnd_zr = 'per'
    geometry = "cylindrical"
    xmin   = 2.0
    xmax   = 7.0
    ymin   = 0.0
    ymax   = 0.5235987755982988
    zmin   =-0.15625
    zmax   = 0.15625
 /

 $MPI_BLOCKS
 /

 $UNITS
   units_set = "pln"
 /

 $RESTART_CONTROL
 /

 $END_CONTROL
    tend   = 3000.0
    nend   = 10
    wend   = 160.0
 /

 $OUTPUT_CONTROL
    use_v2_io = .true.
    nproc_io = 1
    enable_compression = .false.
    problem_name ='kepler'
    run_id  =  'tst'
    dt_hdf  = 2.0
    dt_res  = 200.0
    wdt_res  = 8.0
    dt_log  = 0.1
    dt_tsl  = 0.5
    vars(1:) = 'dens', 'velx', 'vely', 'velz', 'gpot', 'gp', 'sgp'
    gdf_strict = .false.
 /

 $FLUID_NEUTRAL
    cs_iso = 0.25 ! 0.05507   ! 150K for PLN
    selfgrav = .true.
 /

 $FLUID_DUST
    selfgrav = .true.
 /

 $NUMERICAL_SETUP
    cfl    = 0.6
    use_smalld = .true.
    smalld = 5.e-7
    relax_time = 0.00001
    limiter= 'vanleer'
    cfr_smooth = 0.01
    geometry25D = .false.
    use_fargo = .true.
    dt_max_grow = 1.1
!    skip_sweep = T, T, F
 /

 $GRAVITY
    external_gp = "GRAV_PTMASS"
    ptmass  = 1047.7
    ptm_x   = 0.0
    ptm_y   = 0.0
    ptm_z   = 0.0
    r_smooth= 0.0
    user_grav = .true.
 /

 $PROBLEM_CONTROL
    d0      = 170.0  ! g/cm**2 Desch
    r_in    = 2.4
    r_out   = 7.1
    f_out   = 11.0
    f_in    = 10.0
    use_inner_orbital_period = .false.
    dumping_coeff = 5.0
    dens_exp = 1.5    ! Desch
    eps      = 1.0
    amp_noise = 1.0e-6
!    R_divine = 6.5
    amp_func = 2
 /

 $PIERNIK_DEBUG
 /

 $INTERACTIONS
   collision_factor  = 1.0
   dragc_gas_dust    = 1.0
   cfl_interact      = 0.8
   grain_size        = 10.0
 /

 $FLUID_TRACER
 /

 $MULTIGRID_SOLVER
   stdout = .true.
!   dirty_debug = .false.
 /

 $MULTIGRID_GRAVITY
   norm_tol  = 1.e-6
   nsmool    = 16
   grav_bnd_str  = "isolated"
   mmax = 0
   lmax = 64
!   use_CG = .true.
 /

 $AMR
    bsize = 16, 16, 16
    n_updamr = 2
    level_max = 2
!    refine_points(1) = 1, 4.5, .001, 0.001
    refine_boxes(1)  = 1, 4.4, 0., -.1, 4.51, 7., .1
 /
