 $BASE_DOMAIN
    n_d = 128, 128, 128
    bnd_xl = 'per'
    bnd_xr = 'per'
    bnd_yl = 'per'
    bnd_yr = 'per'
    bnd_zl = 'per'
    bnd_zr = 'per'
    xmin   =-1.0
    xmax   = 1.0
    ymin   =-1.0
    ymax   = 1.0
    zmin   =-1.0
    zmax   = 1.0
 /

 $MPI_BLOCKS
    psize = 2, 2, 2
 /

 $UNITS
 /

 $RESTART_CONTROL
    restart  = 'last'
    new_id   = ''
    nrestart = 0
 /

 $END_CONTROL
    tend   = 5.0
    nend   = 100000
 /

 $OUTPUT_CONTROL
    problem_name ='turbulence'
    run_id =  'tst'
    dt_hdf  = 0.01
    dt_res  = 0.0
    dt_log  = 0.001
    dt_tsl  = 0.001
    vars(1:) = 'ener', 'dens', 'trcr', 'velx', 'vely', 'velz'
 /

 $FLUID_NEUTRAL
    gamma  = 1.01
 /

 $NUMERICAL_SETUP
    cfl    = 0.8
    smalld = 1.e-3
    smallei= 1.e-5
    integration_order = 2
    limiter= 'moncen'
 /

 $PROBLEM_CONTROL
    d0     = 1.0
    Mrms   = 5.0
    c_si   = 0.1
 /

 $INTERACTIONS
 /

 $FLUID_TRACER
 /

 $AMR
 /
