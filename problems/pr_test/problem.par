 $BASE_DOMAIN
    n_d = 2*576, 1
    nb = 2
    ! set n_d(:) to 3*64 if you want to have iy or iz /=0,
    ! when prefer_rbgs_relaxation is .true.
    ! or when parallel execution leads to nonconvergence
    bnd_xl = 'out'
    bnd_xr = 'out'
    bnd_yl = 'out'
    bnd_yr = 'out'
    bnd_zl = 'out'
    bnd_zr = 'out'
    xmin   = -1.
    xmax   =  1.
    ymin   = -1.
    ymax   =  1.
    zmin   = -1.
    zmax   =  1.
 /

 $MPI_BLOCKS
    psize = 2, 2, 1
    bsize = 3*64
    allow_uneven = .true.
    allow_noncart = .true.
    dd_unif_quality = 1.1
    dd_rect_quality = 1.1
    use_comm3d  = .false.
 /

 $UNITS
    units_set = "cgs"
 /

 $RESTART_CONTROL
    restart  = 'none'
    new_id   = ''
    nrestart = 0
 /

 $END_CONTROL
    tend   = 0.0
    nend   = 1
 /

 $OUTPUT_CONTROL
    problem_name = 'P_R'
    run_id =  'ts1'
    dt_hdf  = 1.0
    dt_res  = 0.0
    dt_plt  = 0.2
    dt_log  = 0.001
    dt_tsl  = 0.001
    vars(1) = 'fld'
    vars(2) = 'denn'
 /

 $FLUID_NEUTRAL
    gamma = 1.67
    selfgrav = .false.
 /

 $NUMERICAL_SETUP
    cfl    = 0.7
    smalld = 1.e-5
    smallei= 1.e-5
    limiter= 'vanleer'
 /

 $PROBLEM_CONTROL
!    ord_prolong = -2
    point = .true.
    coords(1:3) = 0.2, 0.8, 0.
 /

 $INTERACTIONS
 /

 $MULTIGRID_SOLVER
!    level_max = 2
    stdout    = .true.
    ord_prolong   = -2
    dirty_debug = .true.
 /

 $PIERNIK_DEBUG
 /

 $AMR
 /

 $PIERNIK_IO_DEBUG
 /
