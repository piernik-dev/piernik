 $BASE_DOMAIN
    n_d = 1, 50, 100
    nb           = 4
    bnd_xl       = 'per'
    bnd_xr       = 'per'
    bnd_yl       = 'per'
    bnd_yr       = 'per'
    bnd_zl       = 'outd'
    bnd_zr       = 'outd'
    xmin         =-1.0
    xmax         = 1.0
    ymin         =-1.0
    ymax         = 1.0
    zmin         =-1.0
    zmax         = 1.0
 /

 $MPI_BLOCKS
 /

 $UNITS
 /

 $RESTART_CONTROL
    restart      = 'last'
    nrestart     = 0
    new_id       = ''
 /

 $END_CONTROL
    tend         = 10.0
    nend         = 1000000
 /

 $OUTPUT_CONTROL
    problem_name = 'lingrav'
    run_id       = 'tst'
    dt_hdf       = 0.1
    dt_res       = 0.0
    dt_log       = 1.0e-1
    dt_tsl       = 1.0e-1
    vars(1:) = 'magx', 'dens', 'magy', 'magz', 'velx', 'vely', 'velz'
 /

 $FLUID_IONIZED
    gamma = 1.66666667
 /

 $NUMERICAL_SETUP
    cfl          = 0.9
    smalld       = 1.e-5
    smallei      = 1.e-4
    integration_order = 2
    limiter= 'vanleer'
  /

 $GRAVITY
    external_gp = "GRAV_LINEAR"
    nsub         =  10
    g_dir        =  0.0, 0.0, -10.0
 /

 $RESISTIVITY
    cfl_resist   =    0.9   ! Courant's number for resistiwity
    eta_0        =  100.0   ! uniform resistivity
    eta_1        =    0.0   ! anomalous resistivity, works above j_crit
    j_crit       = 1000.0   ! critical value of current
 /

 $SHEARING
    omega        = 0.0      ! angular freq.
    qshear       = 1.0      ! shearing param. q: vy=q*omega*x
 /

 $PROBLEM_CONTROL
    d0           =  1.0     ! density in galactic plane
    bxn          =  0.0     !
    byn          =  1.0     ! __direction__ of B field
    bzn          =  0.0     !
    alpha        =  0.0
 /

 $INTERACTIONS
 /

 $AMR
 /
