 $BASE_DOMAIN
    n_d = 100, 1, 100
    bnd_xl = 'per'
    bnd_xr = 'per'
    bnd_yl = 'per'
    bnd_yr = 'per'
    bnd_zl = 'per'
    bnd_zr = 'per'
    xmin   =-1.0
    xmax   = 1.0
    ymin   =-1.0
    ymax   = 1.0
    zmin   =-1.0
    zmax   = 1.0
 /

 $MPI_BLOCKS
 /

 $UNITS
 /

 $RESTART_CONTROL
    restart  = 'last'
    new_id   = ''
    nrestart = 0
 /

 $END_CONTROL
    tend   = 100.0
    nend   = 100000
 /

 $OUTPUT_CONTROL
    problem_name ='dustwave'
    run_id   =  'tst'
    dt_hdf  = 1.0
    dt_res  = 5.0
    dt_log  = 0.00001
    dt_tsl  = 0.00001
    vars(1:) = 'dens', 'velx', 'vely', 'velz'
 /

 $NUMERICAL_SETUP
    cfl    = 0.9
    smalld = 1.e-8
    smallei= 1.e-8
    integration_order = 2
    limiter= 'vanleer'
 /

 $FLUID_DUST
 /

 $PROBLEM_CONTROL
    d0       = 1.0
    v0       = 0.1
    v1       = 0.01
    m_x      = 2
    m_y      = 1
    m_z      = 0
 /

 $INTERACTIONS
 /

 $AMR
 /
