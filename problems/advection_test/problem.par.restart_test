 $BASE_DOMAIN
    n_d = 25, 35, 30
    bnd_xl = 'per'
    bnd_xr = 'per'
    bnd_yl = 'per'
    bnd_yr = 'per'
    bnd_zl = 'per'
    bnd_zr = 'per'
    xmin   = -20.
    xmax   =  20.
    ymin   = -18.
    ymax   =  18.
    zmin   = -14.
    zmax   =  14.
 /

 $MPI_BLOCKS
    allow_uneven = .true.
    allow_noncart = .true.
    dd_unif_quality = 1.1
    dd_rect_quality = 1.1
 /

 $UNITS
    units_set = "cgs"
 /

 $RESTART_CONTROL
    restart  = 'last'
    new_id   = ''
    nrestart = 0
 /

 $END_CONTROL
    tend   = 1.0
    nend   = 1000
 /

 $OUTPUT_CONTROL
    problem_name ='moving_pulse'
    run_id =  'ts1'
    dt_hdf  = 1.0
    dt_res  = 1.0
    dt_log  = 0.001
    dt_tsl  = 0.001
    vars(1:) = 'ener', 'dens', 'velx', 'vely', 'velz'
 /

 $FLUID_NEUTRAL
    gamma = 1.67
    selfgrav = .false.
 /

 $NUMERICAL_SETUP
    cfl    = 0.7
    smalld = 1.e-5
    smallei= 1.e-5
    limiter= 'vanleer'
 /

 $PROBLEM_CONTROL
    pulse_vel = 40., -36., 28.
    pulse_size = 20., 18., 14.
 /

 $INTERACTIONS
 /

 $AMR
 /
